// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  username       String   @unique
  name           String
  contact_number String?
  account_type   String?
  created_on     DateTime @default(now())
  updated_at     DateTime @updatedAt

  properties     Property[]
  comments       Comment[]
  user_likes     Like[]
}

model Property {
  id                      Int      @id @default(autoincrement())
  title                   String
  slug                    String?
  price                   Float
  location                String
  main_category           String
  commercial_sub_category String?
  specs                   String
  author                  String
  likes                   Int      @default(0)
  images                  String   // Stored as JSON string
  property_types          String   // Stored as JSON string
  purposes                String   // Stored as JSON string
  
  latitude                Float?
  longitude               Float?
  google_maps_url         String?
  
  created_on              DateTime @default(now())
  listed_on               DateTime @default(now())
  updated_at              DateTime @updatedAt
  
  listed_by               Int
  user                    User      @relation(fields: [listed_by], references: [id])

  comments                Comment[]
  property_likes          Like[]
}

model Comment {
  id          Int      @id @default(autoincrement())
  content     String
  created_at  DateTime @default(now())
  
  property_id Int
  property    Property @relation(fields: [property_id], references: [id])
  
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
}

model Like {
  id          Int      @id @default(autoincrement())
  created_at  DateTime @default(now())
  
  property_id Int
  property    Property @relation(fields: [property_id], references: [id])
  
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])

  @@unique([property_id, user_id])
}
